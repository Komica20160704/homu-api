<div id="app" class="block-container">
  <div v-if="loading" style="text-align: center;">
    <i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
  <block
    v-else
    v-for="block in blocks"
    :type="blockType"
    :key="block.number"
    :is-self="block.isSelf"
    :fade-in=true
    :expand=false
    :block="block"
  ></block>
</div>
<%= erb :'component/block' %>
<%= js_tag 'index.js' %>
