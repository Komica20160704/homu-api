<%
  background_color = '#e5eeff'
  dialog_color = '#abc9ff'
  text_color = '#002f84'
  text_color_light = '#3070e0'
%>

body {
  background-color: <%=background_color%>;
  color: <%=text_color%>;
}

h1.title {
  color: <%=text_color%>;
}

.tawawa-point {
  position: fixed;
  cursor: grab;
  cursor: -moz-grab;
  cursor: -webkit-grab;
  width: 50px;
  height: 40px;
  border: solid 0px;
  border-radius: 50%;
  right: 10px;
  bottom: 45px;
}

.head_bar {
  background-color: #e5eeff;
  background: -moz-linear-gradient(top, <%=background_color%> 90%, rgba(255, 255, 255, 0) 100%);
  background: -webkit-linear-gradient(top, <%=background_color%> 90%, rgba(255, 255, 255, 0) 100%);
  background: linear-gradient(to bottom, <%=background_color%> 90%, rgba(255, 255, 255, 0) 100%);
}

.head_block {
  color: <%=text_color_light%>;
}

#television, #id-hider, #new_host {
  background-color: <%=dialog_color%>;
}

.dialog {
  background-color: <%=dialog_color%>;
}

.dialog .title {
  color: <%=text_color%>;
}

.dialog .name {
  color: <%=text_color%>;
}

.reuse, .answer {
  color: <%=text_color_light%>;
}

.dialog-img-link {
  float: left;
  position: relative;
  padding-top: 5px;
  padding-left: 20px;
  padding-right: 20px;
}

.dialog_img {
  margin: 0px;
  -webkit-filter: sepia(100%) hue-rotate(180deg);
  filter: sepia(100%) hue-rotate(180deg);
}

.dialog-img-after {
  position: absolute;
  float: left;
  top: 5px;
  left: 20px;
  right: 20px;
  bottom: 0;
  background-color: rgba(88, 148, 255, 0.5);
}

.head .dialog-img-after, #followHead .dialog-img-after {
  background-color: rgba(158, 191, 255, 0.25);
}
